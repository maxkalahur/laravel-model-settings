{
    "name": "maxkalahur/laravel-model-settings",
    "description": "This Laravel package allows you to attach settings to Laravel Models, save them in DB and encrypt.",
    "license": "MIT",
    "keywords": [
        "laravel",
        "settings"
    ],
    "authors": [
        {
            "name": "Maksym Kalahur",
            "email": "maxkalahur@gmail.com"
        }
    ],
    "require": {
        "php": "^7.3|^8.0",
        "illuminate/database": "^7.0|^8.0|^9.0|^10.0",
        "illuminate/encryption": "^7.0|^8.0|^9.0|^10.0",
        "illuminate/contracts": "^8.75|^9.0|^10.0",
        "illuminate/support": "^8.75|^9.0|^10.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5.10",
        "orchestra/testbench": "^6.23|^7.6|^8.0",
        "illuminate/auth": "^7.0|^8.0|^9.0|^10.0",
        "nunomaduro/collision": "^5.10|^6.2.1|^6.1",
        "nunomaduro/larastan": "^1.0.3|^2.4"
    },
    "autoload": {
        "psr-4": {
            "MaxKalahur\\LaravelModelSettings\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "MaxKalahur\\LaravelModelSettings\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "MaxKalahur\\LaravelModelSettings\\CustomSettingServiceProvider"
            ]
        }
    }
    "minimum-stability": "dev",
    "prefer-stable": true,
}
